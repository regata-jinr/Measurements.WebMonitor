@page "/MeasurementState"

@using WebMonitorBlazor.Data
@inject LogService _logService

<h1>Measurements Web Monitor </h1>

@if (logs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>DateTime</th>
                <th>Level</th>
                <th>Operator</th>
                <th>FromInstance</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in logs)
            {
                <tr>
                    <td>@log.date_time.ToString()</td>
                    <td>@log.level</td>
                    <td>@log.assistant</td>
                    <td>@log.frominstance</td>
                    <td>@log.message</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    Log[] logs;

    protected override async Task OnInitializedAsync()
    {
        logs = await _logService.GetLogsAsync(DateTime.Now);
    }
}
